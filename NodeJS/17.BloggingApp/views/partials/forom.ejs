

  <div class="max-w-2xl mx-auto mt-10 bg-white rounded-xl shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Create Post</h2>

        <form action="/blog/create" method="POST" class="space-y-4">

            <!-- Title -->
            <div>
                <input 
                    type="text" 
                    name="title" 
                    placeholder="Post title"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
            </div>

            <!-- Content -->
            <div>
                <textarea 
                    name="content" 
                    rows="4"
                    placeholder="What's on your mind?"
                    required
                    class="w-full px-4 py-2 border rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"
                ></textarea>
            </div>

            <!-- Image URL -->
            <div>
                <input 
                    type="text" 
                    name="imgUrl" 
                    placeholder="Image URL (optional)"
                    class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
            </div>

            <!-- Submit -->
            <div class="flex justify-end">
                <button 
                    type="submit"
                    class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition"
                >
                    Post
                </button>
            </div>

        </form>
    </div>